{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/ui/**",
    "**/.devcontainer/**"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "build-images.sh"
      ],
      "matchStrings": [
        "docker\\.io/zabbix/zabbix-server-pgsql:7.0.(?<currentValue>[-0-9\\.a-z]+)"
      ],
      "datasourceTemplate": "docker",
      "depNameTemplate": "zabbix/zabbix-server-pgsql"
    }
  ]
}
